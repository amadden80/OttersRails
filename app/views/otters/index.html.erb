<p id="notice"><%= notice %></p>

<h1>Listing Otters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Bio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @otters.each do |otter| %>
      <tr>
        <td><%= otter.name %></td>
        <td><%= otter.age %></td>
        <td><%= otter.bio %></td>
        <td><%= link_to 'Show', otter %></td>
        <td><%= link_to 'Edit', edit_otter_path(otter) %></td>
        <td><%= link_to 'Destroy', otter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Otter', new_otter_path %>
